<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#81D4FA">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:src="@drawable/ic_overview_background"
        android:adjustViewBounds="true"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/overview_distance_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/overview_distance_intro"
        style="@style/LargeText"

        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/margin_xlarge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/overview_distance_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        style="@style/BoldLargeText"

        app:layout_constraintTop_toBottomOf="@id/overview_distance_intro"
        android:layout_marginTop="@dimen/margin_small"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/overview_fuel_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/overview_fuel_intro"
        style="@style/LargeText"

        app:layout_constraintTop_toBottomOf="@id/overview_distance_value"
        android:layout_marginTop="@dimen/margin_large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/overview_fuel_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        style="@style/BoldLargeText"

        app:layout_constraintTop_toBottomOf="@id/overview_fuel_intro"
        android:layout_marginTop="@dimen/margin_small"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>